    color: $text-dark;
    font-size: 2rem;
  }

  &__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }
}

// –°—Ç–∏–ª—ñ –¥–ª—è Swiper
.swiper {
  width: 100%;
  padding: 30px 0 60px;

  &-slide {
    width: 300px !important; // –§—ñ–∫—Å–æ–≤–∞–Ω–∞ —à–∏—Ä–∏–Ω–∞ —Å–ª–∞–π–¥–∞
    height: auto;
    background: $background-light;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.3s;

    img {
      height: 80px;
      width: auto;
      margin-bottom: 20px;
      object-fit: contain;
    }

    &-title {
      color: $primary-color;
      font-size: 1.25rem;
      font-weight: 700;
      margin-bottom: 15px;
      position: relative;
      text-align: center;

      &::after {
        content: "";
        display: block;
        width: 60px;
        height: 2px;
        background: $accent-color;
        margin: 15px auto;
      }
    }

    &-text {
      color: $text-regular;
      font-size: 0.9rem;
      line-height: 1.5;
      text-align: center;
      max-width: 90%;
      margin: 0 auto;
    }
  }

  // –ü–∞–≥—ñ–Ω–∞—Ü—ñ—è
  &-pagination {
    bottom: 20px !important;

    &-bullet {
      background: $gray-medium;
      opacity: 0.5;

      &-active {
        background: $primary-color;
        opacity: 1;
      }
    }
  }
}

