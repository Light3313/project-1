document.addEventListener("DOMContentLoaded", function() {
    const swiper = new Swiper('.swiper', {
        slidesPerView: 'auto',
        centeredSlides: true,
        spaceBetween: 30,
        loop: true,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        breakpoints: {
          320: { slidesPerView: 1 },
          600: { slidesPerView: 2 },
          850: { slidesPerView: 3 },
        }
      });
});

-------------------------
window.addEventListener('DOMContentLoaded', () => {
    const initSwiper = () => {
      let swiper;
  
      const enableSwiper = () => {
        swiper = new Swiper('.mySwiper', {
          loop: true,
          spaceBetween: 20,
          slidesPerView: 3,
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          breakpoints: {
            850: {
              slidesPerView: 3, // üîπ –í—ñ–¥ 850px –ø–æ–∫–∞–∑—É—î –ø–æ 2 –µ–ª–µ–º–µ–Ω—Ç–∏
              spaceBetween: 15,
            },
            600: {
              slidesPerView: 2, // üîπ –í—ñ–¥ 600px –ø–æ–∫–∞–∑—É—î –ª–∏—à–µ 1 –µ–ª–µ–º–µ–Ω—Ç
              spaceBetween: 10,
            },
            0: {
              slidesPerView: 1, // üîπ –í—ñ–¥ 600px –ø–æ–∫–∞–∑—É—î –ª–∏—à–µ 1 –µ–ª–µ–º–µ–Ω—Ç
              spaceBetween: 5, 
            }
          },
          on: {
            slideChange: function () {
              console.log('Slide index:', swiper.activeIndex);
            },
          },
        });
      };
  
      enableSwiper();
    };
  
    initSwiper();
  });
  